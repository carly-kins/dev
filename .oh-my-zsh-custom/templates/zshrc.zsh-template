# oh-my-zsh variables
ZSH=$HOME/.oh-my-zsh
ZSH_CUSTOM=$HOME/.oh-my-zsh-custom
ZSH_THEME="git-taculous"

# zsh plugins
plugins=(bundler git)

source $ZSH/oh-my-zsh.sh

# path and environment variables
PATH=$HOME/bin:$PATH:/opt/local/bin:/opt/local/sbin

# custom aliases
alias ls="ls -lahG"
alias s="subl"
alias p="python"
alias o="open"
